#у матриці 4*4, що задана користувачем замініть всі від’ємні елементи на 0.
import numpy as np
while True:
    while True:
        try:
            n, m = 4, 4 # створення матриць
            a = np.zeros((n, m), dtype=int)
            b=np.zeros((n, m), dtype=int)
            break
        except ValueError:
            print('Тіко нумси')
    for i in range(n): #задання першої матриці
        for j in range(m):
            a[i, j] = int(input(f'A[{i},{j}]='))
            b[i,j]=a[i,j] #копіювання першої матриці
            if b[i,j]<0:
                b[i,j]=0 # перетворення негативних значень у нуль
    print(f'Матриця:\n{a}')
    print(f'Нова матриця без нег знач\n {b}')
    result = input('Щоб пнрнзапустити нажми любу кнопку')
    if result == '1':
        continue
    else:
        break
